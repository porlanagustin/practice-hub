<style>
            body {
                background-color: #f2f2f2;
                font-family: Arial, sans-serif;
                text-align: center;
            }
            .container {
                margin: auto;
                max-width: 800px;
                padding: 20px;
                background-color: #ffffff;
                border-radius: 10px;
                box-shadow: 0px 0px 10px rgba(0,0,0,0.2);
            }
            h1 {
                color: #009933;
            }
            h2 {
                font-style: italic;
            }
            form {
                margin-top: 20px;
            }
        </style>
<div class="container">
            <h1>USER OK LOGIN!</h1>
            <h2>Bienvenido {{usuario}}</h2>
            <br>
            <h3>Nombre: {{nombre}}</h3>
            <h3>Apellido: {{apellido}}</h3>
            <h3>Email: {{email}}</h3>
            <form action="/logout" method="get">
                <input type="submit" value="LOGOUT" />
            </form>
        </div>
        <script>
            function redireccionar(pagina) {
                location.href = pagina;
            } 
            function volver() {
                setTimeout(() => redireccionar('/login/adminproductos'), 2000);
            }
            volver();
        </script>
