<style>
  .cart-container {
    position: fixed;
    bottom: 0;
    left: calc(50% - 20px);
    transform: translateX(-50%);
    background-color: #fff;
    border: 1px solid #ccc;
    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
    padding: 20px;
    font-family: Arial, sans-serif;
    font-size: 16px;
    color: #333;
  }

  .cart-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  .cart-table th,
  .cart-table td {
    border: 1px solid black;
    padding: 10px;
  }

  .cart-table th {
    background-color: #cccccc;
    text-align: center;
  }

  .cart-table td {
    text-align: left;
  }

  .cart-table .delete {
    cursor: pointer;
    color: red;
    font-weight: bold;
    text-align: center;
  }

  .cart-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20px;
  }

  .cart-footer .delete-all {
    cursor: pointer;
    color: red;
    font-weight: bold;
  }

  .cart-footer button {
    padding: 10px 20px;
    background-color: #4CAF50;
    color: #fff;
    border: none;
    border-radius: 4px;
    font-size: 16px;
    cursor: pointer;
  }
</style>

<div class="cart-container">
  <table class="cart-table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Eliminar</th>
      </tr>
    </thead>
    <tbody>
      {{#each cartFinded.products}}
      <tr>
        <td>{{this.title}}</td>
        <td>{{this.price}}</td>
        <td class="delete" data-id="{{this.id}}">x</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <div class="cart-footer">
    <form method="post" action="/buyProducts">
          <input type="hidden" name="username" value="{{user.username}}">
          <input type="hidden" name="email" value="{{user.email}}">
          <input type="hidden" name="">
          <button type="submit">Comprar</button>
        </form>
    <span class="delete-all">Vaciar carrito</span>
  </div>
</div>
